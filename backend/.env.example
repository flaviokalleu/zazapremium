# Exemplo de configuração .env para backend Zazap
NODE_ENV=development
PORT=8081
HOST=0.0.0.0

# Frontend permitido (CSV) - usar somente FRONTEND_URL
FRONTEND_URL=http://localhost:4000

# Banco de Dados
DB_NAME=zazap2
DB_USER=postgres
DB_PASS=postgres
DB_HOST=postgres
DB_PORT=5432

# JWT / Autenticação
JWT_SECRET=altere_esta_chave
ACCESS_TOKEN_EXPIRY=30m
REFRESH_TOKEN_EXPIRY=7d
EXPOSE_REFRESH_TOKEN=true
FORCE_INSECURE_COOKIES=true
COOKIE_SAMESITE=lax
COOKIE_SECURE=false
LOG_AUTH_VERBOSE=false

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Baileys
BAILEYS_AUTH_ROOT=privated/baileys

# Web Push
VAPID_PUBLIC=COLOQUE_SUA_CHAVE_PUBLICA
VAPID_PRIVATE=COLOQUE_SUA_CHAVE_PRIVADA
