{
  "watch": [
    "index.js",
    "routes/**/*.js",
    "controllers/**/*.js",
    "services/**/*.js",
    "models/**/*.js",
    "middleware/**/*.js",
    "config/**/*.js"
  ],
  "ignore": [
    "node_modules/**/*",
    "uploads/**/*",
    "privated/**/*",
    "**/privated/**",
    "**/*.json",
    "**/baileys/**",
    "**/.wwebjs_*/*",
    ".wwebjs_auth/**/*",
    "**/auth_info_baileys/**",
    "**/creds.json",
    "**/pre-key-*.json", 
    "**/sender-key-*.json",
    "**/session-*.json",
    "**/app-state-sync-key-*.json",
    "*.log",
    "*.tmp"
  ],
  "ext": "js",
  "verbose": false,
  "legacyWatch": true,
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 2000
}
